<aura:component extends="c:LC00_Section">
    <div class="slds-grid slds-wrap slds-grid--pull-padded">    
    
        <div class="slds-p-horizontal--small slds-size--1-of-2 slds-m-bottom--small">                  
        <c:LC00_DependantFields label="23. Diptube Length" 
						objectName="PM_Dispensing_Config__c" 
						fieldName="Diptube_Length__c" 
						savedfieldName="Diptube_Length__c"
						value="{!v.selectedconfig.Diptube_Length__c}"
						parameters="{Location__c : 'EU', Table_Name__c : 'Diptube Length option', Product_Segment__c : 'Lotion pumps', ActiveValue__c : 'TRUE'}" 
						dependentfields="['Engine_Name__c']"
						saveddependentfields="['Engine_Name__c']"
								selectedConfig="{!v.selectedconfig}"
						/> 
        </div>    
           
        <div class="slds-p-horizontal--small slds-size--1-of-2 slds-m-bottom--small">               
        	<c:LC00_DependantFields label="25. PBT Body" 
						objectName="PM_Dispensing_Config__c" 
						fieldName="PBT_Body__c" 
						savedfieldName="PBT_Body__c"
						value="{!v.selectedconfig.PBT_Body__c}"
						parameters="{Location__c : 'EU', Table_Name__c : 'PBT body option', Product_Segment__c : 'Lotion pumps', ActiveValue__c : 'TRUE'}" 
						dependentfields="['Engine_Name__c']"
						saveddependentfields="['Engine_Name__c']"
									selectedConfig="{!v.selectedconfig}"
						/> 
        </div>    
        
        <div class="slds-p-horizontal--small slds-size--1-of-2 slds-m-bottom--small">
            <label class="slds-form-element__label" style="color: orange;">24. Diptube length (mm)</label>
            <ui:inputText value="{!v.selectedconfig.Diptube_length_mm__c}" /> 
        </div>   
        
        <div class="slds-p-horizontal--small slds-size--1-of-2 slds-m-bottom--small">               
        	<c:LC00_DependantFields label="26. Plastic Protection" 
						objectName="PM_Dispensing_Config__c" 
						fieldName="Plastic_Protection__c" 
						savedfieldName="Plastic_Protection__c"
						value="{!v.selectedconfig.Plastic_Protection__c}"
						parameters="{Location__c : 'EU', Table_Name__c : 'Sleevage option', Product_Segment__c : 'Lotion pumps', ActiveValue__c : 'TRUE'}" 
						dependentfields="['Engine_Name__c']"
						saveddependentfields="['Engine_Name__c']"
									selectedConfig="{!v.selectedconfig}"
						/> 
        </div>    
            
		
    </div>
</aura:component>